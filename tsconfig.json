{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "es2021"
    ],
    "module": "es2022",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}